{
  "manifest_version": 3,
  "name": "番茄时间",
  "version": "1.0",
  "description": "一个帮助你使用番茄工作法的Chrome插件",
  "permissions": ["storage", "notifications", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 